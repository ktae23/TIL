<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="kr.co.openeg.mapper.AnswerAttachMapper">

	<insert id="insert">
		insert into tbl_answer_attach (
			uuid, uploadpath, filename, filetype, asno
		) values (
			#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{asno}
		)
	</insert>
	
	<delete id="delete">
		delete 
		  from tbl_answer_attach
		 where uuid = #{uuid}
	</delete>
	
	<delete id="deleteAllByAsno">
		delete
		  from tbl_answer_attach 
		 where asno = #{asno}
	</delete>
	
	<select id="findByAsno" resultType="kr.co.openeg.domain.AnswerAttachVO">
		select * 
		  from tbl_answer_attach
		 where asno = #{asno}
	</select>

</mapper>
