<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="kr.co.openeg.mapper.RegistAttachMapper">

	<insert id="insert">
		insert into tbl_regist_attach (
			uuid, uploadpath, filename, filetype, rgno
		) values (
			#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{rgno}
		)
	</insert>
	
	<delete id="delete">
		delete 
		  from tbl_regist_attach
		 where uuid = #{uuid}
	</delete>
	
	<delete id="deleteAllByRgno">
		delete
		  from tbl_regist_attach 
		 where rgno = #{rgno}
	</delete>
	
	<select id="findByRgno" resultType="kr.co.openeg.domain.RegistAttachVO">
		select * 
		  from tbl_regist_attach
		 where rgno = #{rgno}
	</select>

</mapper>
